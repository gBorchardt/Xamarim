<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App31_FontesPersonalizadas.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="LabelFontStyle" TargetType="Label">
                <Setter Property="FontFamily">
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="iOS">Lily of  the Valley_Personal_Use</On>
                        <On Platform="Android">LilyoftheValley.ttf#Lily of  the Valley_Personal_Use</On>
                        <On Platform="UWP">Assets/Fonts/LilyoftheValley.ttf#Lily of  the Valley_Personal_Use</On>
                    </OnPlatform>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>