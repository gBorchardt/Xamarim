<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App02_TipoPagina.TipoPagina.Navigation.Pagina1"
             Title="Titulo da Navigation"
             >

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" Icon="Xamarim.png"/>
        <ToolbarItem Text="Detalhes" Icon="Page.png"/>
        <ToolbarItem Text="Ordenar" Icon="Play.png"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eu sou uma ContentPage!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Ir para Página 2" Clicked="MudarParaPagina2"/>
            <Button Text="Ir para Modal" Clicked="MudarParaModal"/>
            <Button Text="Ir para Master" Clicked="MudarParaMaster"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>