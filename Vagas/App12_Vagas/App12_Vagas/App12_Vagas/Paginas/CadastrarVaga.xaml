<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App12_Vagas.Paginas.CadastrarVaga">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Entry x:Name="Cargo" Placeholder="Vaga - Cargo"/>
                <Entry x:Name="Empresa" Placeholder="Empresa"/>
                <Entry x:Name="Quantidade" Placeholder="Quantidade"/>
                <Entry x:Name="Cidade" Placeholder="Cidade"/>
                <Entry x:Name="Salario" Placeholder="Salário"/>
                <Editor x:Name="Descricao" Placeholder="Descrição do Cargo" HeightRequest="200"/>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Tipo de Contratação"/>
                    <Label Text="CLT"/>
                    <Switch x:Name="TipoContratacao"/>
                    <Label Text="PJ"/>
                </StackLayout>

                <Entry x:Name="Telefone" Placeholder="Telefone"/>
                <Entry x:Name="Email" Placeholder="Email"/>

                <Button Text="Salvar" Clicked="SalvarAction"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>