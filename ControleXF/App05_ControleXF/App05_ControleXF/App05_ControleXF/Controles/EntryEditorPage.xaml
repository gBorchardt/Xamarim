<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControleXF.Controles.EntryEditorPage">
    <ContentPage.Content>
        <StackLayout>
            
            <!--Poucos valores-->
            <Entry x:Name="txtIdade"
                   Text=""
                   TextColor="Red"
                   Placeholder="Digite sua idade"
                   PlaceholderColor="Blue"
                   IsPassword="False"
                   
                   Keyboard="Numeric"
                   
                   
                   BackgroundColor="#CCCCCC"
                   />

            <Label x:Name="lblDuplicado"/>

            <!--Texto maior (Comentários)-->
            <Editor x:Name="txtComentario" 
                    HeightRequest="200"/>

            <Label x:Name="lblQtdCaracteres"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>